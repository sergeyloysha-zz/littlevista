@import url("https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700,300")

clearfix()
	zoom 1
	
	&:after
	&:before
		content ""
		display table
	&:after
		clear both

html
	height 100%

body
	font-family 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif
	font-size 16px
	height 100%
	min-width 1200px
	min-height 610px
	background-color #f0f0f2
	
.white
	background #fff

*
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	outline 0

.page
	position relative

	.content
		position relative
		width 370px
		margin 0 auto
		min-height 400px
		height 100%
		
	.inner
		width 100%
		position absolute
		top 50%
		margin-top -200px
		
	.logo
		background url('../images/logo.png') center no-repeat
		width 258px
		height 128px
		margin 0 auto 
		
	form
		margin 60px 0 10px 0
		position relative
		
		input
			padding 0px 20px
			display block
			width 100%
			line-height 55px
			background #fff
			border 1px solid #e2e2e3
			
		input:first-child
			border-radius 3px 3px 0 0
			
		input:nth-child(2)
			margin-top -1px
			border-radius 0 0 3px 3px
			
		.btn
			width 100%
			display block
			margin-top 20px
			
			
.btn
	display inline-block
	line-height 45px
	padding 0 10px
	background #82c878
	text-align center
	border none
	border-radius 5px
	color #fff
	box-shadow: 0 5px 0 #6caa63;
	cursor pointer
	text-decoration none
	
	&.btn-blue
		background #46aae1
		box-shadow: 0 5px 0 #528aca;
		
/*
	Dashboard
*/

#wrapper
	padding-left 240px
	height 100%
	
#sidebar
	position relative
	margin-left -240px
	width 240px
	background #32383e
	height 100%
	overflow-y auto
	z-index 1000
	float left
	
.sidebar
	
	&__header
		height 70px
		background #22272a
		text-align center
		
	&__logo
		display inline-block
		background url('../images/logo_small.png') center no-repeat
		width 156px
		height 44px
		margin-top 13px
		
	&__contact
		position absolute
		left 0
		right 0
		margin 0 auto
		line-height 45px
		width 100px
		text-align center
		border-radius 50px
		color #f45b2a
		border 1px solid #0392e0
		bottom 40px
		text-decoration none
		background transparent
		transition background .2s
		transition color .2s
		
		&:hover
			background #0392e0
			color #fff
		
.account
	margin 60px 30px
	text-align center
	
	&__name
		color #fff
		font-size 22px
		font-weight 300
		margin 0 0 5px 0
		
	&__info
		color #e0dfdf
		font-weight 300

.nav
	display block
	width 100%
	
	&__link
		display block
		line-height 60px
		border-left 2px solid #32383e
		padding 0 25px
		cursor pointer
		transition border-left .3s
		
		&-active,
		&:hover
			border-left 2px solid #3991df
			
			span
				color #3098eb !important
				
			.nav__icon
				background-position -25px 0
			
	&__icon
		display inline-block
		width 25px
		height 25px
		margin 0 10px 0 0
		vertical-align middle
		background-position 0px 0px
		background-size 50px 25px
		
		&-dashboard
			background-image url('../images/icon-dashboard.png')
			
		&-review
			background-image url('../images/icon-review.png')
			
		&-account
			background-image url('../images/icon-account.png')
			
		&-logout
			background-image url('../images/icon-logout.png')
		
	span
		font-weight 300
		font-size 22px
		color #d9d9d9
		vertical-align middle
		
#content
	width 100%
	float left
	
.content
	position relative
	height 100%
	
	&__header
		line-height 70px
		height 70px
		border-bottom 1px solid #dfdfdf
		background #fff
		padding 0 55px
		
	&__headline
		font-size 28px
		color #3d3d3d
		font-weight 300
		
	&__page
		float right
		font-size 22px
		color #3d3d3d
		
.cards
	margin-top 100px
	text-align center
	
.card
	display inline-block
	width 290px
	background #fff
	border-radius 8px
	padding 30px 50px
	box-shadow 0 0 0 2px #eaeaec
	transition box-shadow .5s
	margin-bottom 30px
	vertical-align top
	
	&:hover
		box-shadow 0 0 0 5px #eaeaec

	&:nth-child(2)
		margin 0 30px
		
	&__icon
		background-image url('../images/dashboard-sprite.png')
		background-repeat no-repeat
		width 60px
		height 60px
		margin 0 auto
		
		&-calendar
			background-position 0px 0px
			
		&-handshake
			background-position -60px 0
			
		&-reports
			background-position -120px
			
	&__name
		margin 10px 0 10px 0
		font-size 20px
		line-height 24px
		color #000
	
	&__info
		font-size 16px
		color #6f6f6f
		font-weight 300
	
	&__button
		display inline-block
		line-height 45px
		font-size 20px
		color #6f6f6f
		padding 0 20px
		border-radius 50px
		border 1px solid #0392e0
		text-decoration none
		text-transform uppercase
		margin-top 20px
		background #fff
		transition background .2s, color .2s
		
		&:hover
			background #0392e0
			color #fff
	
.cards__control
	display block
	text-align center
	
.family-button
	display inline-block
	border-radius 50px
	border 1px solid #32c2f2
	line-height 70px
	font-size 24px
	color #424242
	padding 0 20px
	background #fff
	text-decoration none
	
	i
		display inline-block
		position relative
		top -1px
		width 39px
		height 39px
		background url('../images/icon-plus.png') center no-repeat
		vertical-align middle
		margin-right 20px
		
	span
		vertical-align middle
		
.reports
	padding 0 55px
	
	&__item
		display inline-block
		vertical-align top
		max-width 420px
		
		&-title
			font-size 22px
			font-weight 300
			margin 20px 0
			
.report-1
	display inline-block
	width 165px
	line-height 35px
	border-radius 50px
	background #51db54
	color #fff
	margin 0 40px 20px 0
	text-align center
	cursor pointer
	
.report-2
	display inline-block
	width 165px
	height 35px
	line-height 35px
	border-radius 50px
	background #fff
	border 1px solid #777
	color #333
	margin 0 40px 20px 0
	text-align center
	cursor pointer
	
.report-3
	cursor pointer
	display inline-block
	text-align center
	margin 0 25px
	
	&__icon
		display block
		width 140px
		height 115px
		margin 0 auto
		background #fff
		border-radius 10px
		
	&__name
		display block
		margin 10px 0 0 0
		font-size 18px
		font-weight 300
	&__date
		display block
		font-size 14px
		font-weight 600
		
.weekly
	padding 55px
	
	.man
		position relative
		clearfix()
		
		&__photo
			width 120px
			height 120px
			float left
			margin-right 20px
			
			& img
				border-radius 50%
				
		&__info
			float left
				
		&__title
			margin-top 30px
			color #787878
			font-size 18px
			
		&__name
			color #4b4b4b
			font-size 22px
			
	.days
		margin 70px 0
		
		.day
			display inline-block
			text-align center
			width 100px
			margin 0 30px
			
			&__title
				text-transform uppercase
				color #515151
				margin 0 0 20px 0
				font-size 18px
			
			&__data
				//display block
					
				&-sep
					display inline-block
					width 2px
					height 50px
					background #c7c7c7
					vertical-align middle
					margin 0 5px
				
				&-clock
					display inline-block
					line-height 40px
					padding 0 10px
					color #fff
					background #d7d7d7
					vertical-align middle
					border-radius 3px
					
					&_green
						background #00ca54
						box-shadow -1px -1px 0px 1px #3da94f
						
					&_blue
						background #00bff2
						box-shadow -1px -1px 0px 1px #3d7bad
	
	.total
		margin-left 50px
		
		&__headline
			display block
			color #787878
			font-size 18px
		&__data
			display block
			color #4b4b4b
			font-size 22px
			
	.control
		text-align center
		margin-top 70px
		
		a
			display inline-block
			border 1px solid #54afe2
			width 150px
			height 45px
			line-height 45px
			font-size 22px
			text-transform uppercase
			color #54afe2
			text-decoration none
			border-radius 50px
			transition background .2s, color .2s
			font-weight 300
			
			&:hover
				background #54afe2
				color #fff
				
.planning
	padding 20px 50px
	
	&__title
		font-size 24px
		color #494949
		margin-bottom 30px
	
	&__controls
		clearfix()
		margin-bottom 20px
		
	&__staff
		float left
		
		&-headline
			font-size 24px
			color #494949
			
		&-enum
			margin-top 20px
			position relative
			clearfix()
			
	&__man
		float left
		line-height 65px
		margin-right 50px
		color #494949
		
		img
			display block
			margin 0
			float left
			border-radius 50%
		span
			float left
			margin-left 20px
			font-size 18px
	
	&__add
		float left
		line-height 65px
		padding-left 59px
		background url('../images/icon-add.png') left center no-repeat
		color #a4a4a4
		text-decoration none
		
	&__capacity
		float right
		
		&-headline
			font-size 18px
			color #494949
			
		&-enum
			position relative
			
		&-item
			display block
			font-size 22px
			color #494949
			line-height 32px
			margin-top 20px
			
			i
				display inline-block
				width 32px
				height 32px
				background-image url('../images/sprite-capacity.png')
				background-repeat no-repeat
				background-position 0 0
				vertical-align middle
			span
				display inline-block
				line-height 32px
				vertical-align middle
				margin-left 20px
				
			&_1 i
				background-position -32px 0
	
	.summary
		border-top 1px solid #555
		padding-top 50px
		
		&__grid
			clearfix()
			text-align center
			margin 0 -35px
			
			&-days .summary__row
				height auto
			
		&__row
			display inline-block
			margin 0 20px
			vertical-align top
			width 90px
			height 140px
			text-align center
			
		&__day
			vertical-align top
			font-size 18px
			color #494949
			text-transform uppercase
			
		&__clock
			display inline-block
			padding-top 48px
			width 48px
			font-size 24px
			text-align center
			color #494949
			background url('../images/icon-clock.png') top center no-repeat
			margin-top 45px
			
		&__info
			margin-top 40px
			
			&-top
				font-size 18px
				color #4a4a4a
				
			&-sep
				display inline-block
				width 70%
				height 1px
				background #acacac
				margin 3px 0
				
			&-bottom
				color #4a4a4a
				font-size 28px
				
		&__total
			margin-top 40px
			font-size 28px
			font-size #4a4a4a
			width 80px
			height 80px
			line-height 76px
			text-align center
			border 2px solid #ebebeb
			border-radius 50%
		